<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="@android:color/holo_green_light"
        android:id="@+id/container_register_layout">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/user_name_register_layout"
            android:hint="user name"
            android:background="@drawable/edit_text_rounded_corner"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="32dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_register_layout"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email_register_layout"
            android:layout_marginTop="8dp"
            android:background="@drawable/edit_text_rounded_corner"
            android:hint="email"
            app:layout_constraintTop_toBottomOf="@+id/user_name_register_layout"
            app:layout_constraintStart_toStartOf="@+id/user_name_register_layout"
            app:layout_constraintEnd_toEndOf="@+id/user_name_register_layout"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_register_layout"
            android:layout_marginTop="8dp"
            android:hint="password"
            android:background="@drawable/edit_text_rounded_corner"
            app:layout_constraintTop_toBottomOf="@+id/email_register_layout"
            app:layout_constraintEnd_toEndOf="@+id/email_register_layout"
            app:layout_constraintStart_toStartOf="@+id/email_register_layout"/>
    <Button
            android:text="REGISTER"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_corner_button"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:id="@+id/button_register_register_layout" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/password_register_layout"
            app:layout_constraintStart_toStartOf="@+id/password_register_layout"
            app:layout_constraintEnd_toEndOf="@+id/password_register_layout"/>
    <TextView
            android:text="already have an account?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button_register_register_layout"
            app:layout_constraintStart_toStartOf="@+id/button_register_register_layout"
            app:layout_constraintEnd_toEndOf="@+id/button_register_register_layout" android:id="@+id/sign_in_register_layout"/>
    <Button
            android:text="add your image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/circle_image_view"
            android:textColor="@android:color/white"
            android:id="@+id/image_register_layout" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp" android:layout_marginStart="32dp"
    />
</android.support.constraint.ConstraintLayout>